<link rel="stylesheet" href="../css/login-page.css" />
<div class="login-box">
  <div class="login-image-box">
    <img src="../images/user-login.png" alt="" />
  </div>
  <h1 class="login-her">Login her !</h1>
  <div class="login-inputs">
    <form id="frm-login">
      <div class="user-name-content">
        <label for="txt-email">Email :</label>
        <input type="text" class="m-txt" id="txt-email" placeholder="" />
      </div>
      <div class="password-content">
        <label for="txt-password">Password :</label>
        <input type="password" class="m-txt" id="txt-password" placeholder="" />
        <!-- <i class="fas fa-eye"></i> -->
        <i class="fas fa-eye-slash" id="show-password"></i>
      </div>

      <div class="not-found-message-box">
        <span class="error-message" id="msg-ep-incorrect"> </span>
      </div>

      <button
        class="m-btn m-btn-block m-btn-green btn-login"
        type="submit"
        id="btn-login"
      >
        <i class="fas fa-sign-in-alt"></i> login
      </button>
    </form>
    <button class="m-btn m-btn-block btn-register m-btn-blue" id="btn-register">
      <i class="fas fa-user-plus"></i> register
    </button>
  </div>
</div>
<script src="./js/my-validation.js"></script>
<script src="./js/cookie.js"></script>
<script src="./js/login.js"></script>
